extends ../layout

block content
	h1 #{item.name}
	address #{item.address}
	div
		a(href="tel:#{item.phone}") #{item.phone || '--'}
	div.mb30 
		a(href="mailto:#{item.email}") #{item.email || '--'}

	iframe(width="100%", height="350", frameborder="0", scrolling="no", marginheight="0", marginwidth="0", src="https://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=#{item.address}&aq=&ie=UTF8&t=m&z=14&iwloc=A&output=embed")
	if (images.length > 0)		
		h2 Newest Pictures
		div.row
			each img in images
				div.act-item
					img.img-rounded(src="/files/#{img}", height="200")
	if (reviews.length > 0)
		div.page-header
			h2 Reviews
		ul(class="activity-feed")
			each r in reviews
				li.activity-feed-item
					div.mb15 
						span.bold #{r.name}
						span.pull-right.mute.it #{r.time}
					p #{r.text}

					

block scripts